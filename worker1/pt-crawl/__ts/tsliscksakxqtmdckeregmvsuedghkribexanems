			 var keywords= mapkey[i].keywords.split(", ");
			 var output = "";
			 for (var j=0; j<keywords.length; j++)
			 {
			   url = "/search/index.jsp?where=web&eceSort=descending&eceMode=search&eceForm=simple&eceField=all&eceExpr="+ keywords[j];
			   output += "<li><a href='"+url+"'>"+keywords[j]+"</a></li>";
			 }		   }
		   document.write(output);
		   </script>
		   </ul></div>       <script language="JavaScript" charset="iso-8859-1">
		   document.write( "<scr" + "ipt src='https://web.archive.org/web/20080422184722/http://cm.uk.independent.overture.com/js_flat_1_0/?config=4983499424&maxCount=3&keywordCharEnc=latin1&outputCharEnc=latin1&mkt=uk&source=independent_js_uk_ctxt_independent&type="+OVcatid+"&ctxtId="+OVcatid+"&ctxtUrl="+encodeURIComponent(location.href)+"&cb="+ (new Date()).getTime() + "'></SCR" + "IPT>" );
		   </script>       <script language="JavaScript">
		   function escapeDoubleQuotes( s )
		   {
			 var str = String( s );
			 return str.replace( /"/g, '&quot;' );
		   }
		   if( zSr != null )
		   {
			 var k;
			 for( k=6; (k < zSr.length); k += 6 )
			 {
			   document.write('<p><span class="yh"><a href="'+zSr[k+2]+'" target="_blank">'+zSr[k+3]+'</a></span><br />' );
			   if (zSr[k].length > 1)
				 document.write('<span class="yd"><a href="'+zSr[k+2]+'" target="_blank">'+ zSr[k].slice(0,80) + '...</a></span><br /><span class="yl"><a href="'+zSr[k+2]+'" target="_blank">'+zSr[k+4].slice(0,23)+'</a></span></p>' );
			 }
		   }
	</script></div>
