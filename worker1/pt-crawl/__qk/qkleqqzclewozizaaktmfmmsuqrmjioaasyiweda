            let homePathname,timeoutId;
            const getAccessToken = new URLSearchParams(window.location.hash.substring(1));
            const idToken = getAccessToken.get('id_token'); 
            const userLoginElement = document.querySelector('.google-button');
            const userLoggedInElement = document.querySelector('.ssoLoggedInCol');
            const checkBox =document.querySelector('#termsCheck');

            
            if( window &&  window.location ){
            if(window.location.pathname == '/login' || window.location.pathname == "/"  || "english" =="english"){
              homePathname="";
              }
              else if(window.location.pathname.length>1){
                homePathname = "/" + window.location.pathname.split("/")[1];
              }
            }  
            const userNavLogin = document.querySelector('.ssoLoginCol');
            userNavLogin.href = homePathname + "/login";
            (function() {
                if (idToken) {
                    const cleanedUrl = window.location.origin + window.location.pathname;
                    window.history.replaceState({}, document.title, cleanedUrl);
                }
            })();

            if (idToken) {
              googleUserHandler(idToken);
            } else {
                if (userLoginElement instanceof HTMLElement) {
                    userLoginElement.addEventListener('click', redirectToGoogleSignIn);
                }
            }
                
            const userLogoutElement = document.querySelector('.logoutBtn');
            if (userLogoutElement instanceof HTMLElement) {
                userLogoutElement.addEventListener('click', logoutGoogle);
            }
           
            function redirectToGoogleSignIn() {
                const clientId =
                    '59456282601-afrl20hg5tshhrv6nnbk8nrgb30ctf52.apps.googleusercontent.com';
                const redirectUri = encodeURIComponent(window &&  window.location ? window.location.origin + homePathname : "");
                const scope = encodeURIComponent('openid email profile');
                const state = encodeURIComponent('sso-login');
                const authUrl =
                    'https://accounts.google.com/o/oauth2/v2/auth?' +
                    'client_id=' + clientId +
                    '&redirect_uri=' + redirectUri +
                    '&response_type=id_token token' +   
                    '&scope=' + scope +
                    '&state=' + state +
                    '&nonce=' + (new Date().getTime());
                   
                 if (checkBox.checked){
                        window.location.href = authUrl;
                    } else{
                       alert(' Please accept the Terms of Use of the service and Privacy Policy before signing in.');
                    }
            }
            function logoutGoogle() {
                localStorage.removeItem('userSSO');
                google.accounts.id.disableAutoSelect();
                const googleButton = document.getElementById('google-sso');
                if (googleButton) googleButton.style.display = 'block';
                const userInitialsElement = document.querySelector('.userInitial');
                userLoggedInElement.style.display = 'none';
                userNavLogin.style.display = '';
                if (userInitialsElement instanceof HTMLElement) {
                    userInitialsElement.innerText = '';
                }
                const userNameElement = document.querySelector('.userName');
                if (userNameElement instanceof HTMLElement) {
                    userNameElement.innerText = '';
                }
                const userEmailElement = document.querySelector('.userEmailId');
                if (userEmailElement instanceof HTMLElement) {
                    userEmailElement.innerText = '';
                }
                const ssoContainerDiv = document.querySelector('#google-sso');
                if (ssoContainerDiv instanceof HTMLElement) {
                    ssoContainerDiv.style.display = 'none';
                }
            }

             function getInitials(name) {
                if (!name) return '';
                let words = name.trim().split(' ');
                return words[0][0].toUpperCase();
            }

            function isUserLoggedIn() {
                try {
                    const user = JSON.parse(localStorage.getItem('userSSO'));
                    if (user == null || user == undefined) {
                        document.getElementById('google-sso').style.display = 'none';
                        userLoggedInElement.style.display = 'none';
                        userNavLogin.style.display = '';
                        return false;
                    } else {
                        const nameInitials = getInitials(user['name']);
                        document.querySelector('.userInitial').innerText = nameInitials;
                        document.querySelector('.userName').innerText =
                            'Hello, ' + user['name'] + '!';
                        document.querySelector('.userEmailId').innerText = user['email'];
                        userLoggedInElement.style.display = '';
                        userNavLogin.style.display = 'none';
                        return user && Object.keys(user).length > 0;
                    }
                } catch (e) {
                    document.getElementById('google-sso').style.display = 'none';
                    userLoggedInElement.style.display = 'none';
                    userNavLogin.style.display = '';
                    return false;
                }
            }

            function handleCredentialResponse(response) {
                if (!response || !response.credential) {
                    console.warn('No credentials received.');
                    return;
                }
                googleUserHandler(response.credential);
            }
            async function googleUserHandler(token) {
                const userObj = {
                    orgId: "english",
                    accessToken: token,

                };
                try {
                    const response = await fetch(
                        'https://prod-pkd.project-turbine.in/auth-service/sso', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(userObj),
                        }
                    );
                    const result = await response.json();
                    localStorage.setItem('userSSO', JSON.stringify(result));
                    document.dispatchEvent(new Event('userLoggedIn'));
                    isUserLoggedIn()
                } catch (error) {
                    console.error('Error verifying user:', error);
                }
            }

            function initGoogleSignIn() {
                if (isUserLoggedIn()) {
                    console.log('User already logged in, hiding sign-in button.');
                    document.getElementById('google-sso').style.display = 'none';
                    return;
                }
                google.accounts.id.initialize({
                    client_id: '59456282601-afrl20hg5tshhrv6nnbk8nrgb30ctf52.apps.googleusercontent.com',
                    callback: handleCredentialResponse,
                    auto_select: false,
                    use_fedcm_for_prompt: false,
                });
                google.accounts.id.renderButton(document.getElementById('google-sso'), {
                    type: 'standard',
                    theme: 'outline',
                    size: 'large',
                });
               const user = JSON.parse(localStorage.getItem('userSSO'));
                   if (user == null || user == undefined) {
                        google.accounts.id.prompt();
                    }
            }
            document.addEventListener('userLoggedIn', () => {
                const googleButton = document.getElementById('google-sso');
                if (googleButton) googleButton.style.display = 'none';
                if (timeoutId) {
                    clearTimeout(timeoutId);
                    timeoutId = null;
                }
            });
            timeoutId = setTimeout(initGoogleSignIn, 500);
        });
