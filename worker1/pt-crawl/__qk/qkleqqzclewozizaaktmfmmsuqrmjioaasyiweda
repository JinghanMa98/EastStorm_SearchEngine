                    function getQueryParams(qs) {
                    qs = qs.split("+").join(" ");
                    
                    var params = {},
                        tokens,
                        re = /[?&]?([^=]+)=([^&]*)/g;
                    
                    while ((tokens = re.exec(qs))) {
                        params[decodeURIComponent(tokens[1])] = decodeURIComponent(tokens[2]);
                    }
                    
                    return params;
                    }
                    
                    function parseParameters(item) {
                    if (item === "1") {
                        return true;
                    }
                    
                    if (item === "0") {
                        return false;
                    }
                    return false;
                    }
                    
                    var options = {
                    videoElemId: "playerContainer",
                    accountId: "zee",
                    videoId: 183,
                    isAutoPlay: "0",
                    isMute: "0",
                    posterImageUrl: "",
                    taptounmute: "0",
                    disableAds: ""
