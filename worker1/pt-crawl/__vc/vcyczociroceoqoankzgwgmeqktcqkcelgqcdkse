	<main class="page-content clearfix" role="main">
		  <div class="region region-content">
    <div data-drupal-messages-fallback class="hidden"></div>
		<div id="block-main-ipc-master-content" class="block block-system block-system-main-block" aria-label="system-main-block">
	  
	  	  
	  		<div class="content">
		  
<article about="/para-sailing" aria-label="apes_page Para Sailing" class="node node--type-apes-page node--view-mode-full clearfix">
  <header>
    
        
      </header>














<div class="node__content clearfix waf-results waf-sports-detail-page" id="main-content">
  	  		          <div class="layout layout--fullcol">

          <div  class="layout__region layout__region--first">
        						<section class="block block-layout-builder block-inline-blockapes-free-html clearfix apes-free-html template1">
    
        
            <div class="content">
            <div class="freeHTML">
										                            <div class="waf-component waf-sports-detail-showcase">
    <div class="layout-wrapper">
        <div class="showcase-item">
            <div class="showcase-thumbnail">
                <picture>
                    <source media="(min-width: 768px)" srcset="/static-assets/images/common/para.webp?itok=hM0uJukG">
                    <img src="/static-assets/images/common/para.png?itok=hM0uJukG" alt="Showcase Image" importance="low"
                        loading="lazy" class="showcase-image">
                </picture>
            </div>
            <div class="showcase-content">
                <h2 class="showcase-title">
                    PARA SAILING
                </h2>
                <p class="showcase-description">
                    Para sailing made its official debut in the Paralympic programme at the Sydney 2000 Paralympic Games.
                </p>
            </div>
        </div>
    </div>
  </div>
  
  <div class="waf-nav-strip">
    <div class="nav-strip-wrapper" role="navigation">
        <div class="nav-strip-item">
            <a href="#sports-detail-about" class="nav-strip-link" target="_self" title="About" aria-label="About">
                <span class="nav-strip-link-text">About</span>
            </a>
        </div>
        <div class="nav-strip-item">
            <a href="#sports-detail-history" class="nav-strip-link" title="Sport History" aria-label="Sport History">
