<script>
        function hasClass(element, className) {
        return (' ' + element.className + ' ').indexOf(' ' + className + ' ') > -1;
    }

    function getCurrentNodeId() {
        var bodyClasses = document.body.classList;
        for (i in bodyClasses) {
            var c = bodyClasses[i];
            if (c.length > 10 && c.substring(0, 10) === "page-node-")
                return parseInt(c.substring(10), 10);
        }
        return false;
    }

    function getCurrentNodeTags() {
        var bodyClasses = document.body.classList;
        var tagClasses = '';
        for (i in bodyClasses) {
            var c = bodyClasses[i];
            if (c.length > 12 && c.substring(0, 12) === "tag_classes-") {
                return c.replace('tag_classes-', '').split('_').join(' ');
            }
        }
        return false;
    }
    var section = '';
    var nid = '';
    var tags = '';
    if (document.body.classList.contains('page-node-')) {
        nid = getCurrentNodeId().toString();
        tags = getCurrentNodeTags().toString();
    }
    if (window.location.pathname == '/') {
        section = 'homepage';
    } else {
        var url = window.location.href;
        if (url.indexOf('content/page') !== -1) {
            section = 'page';
        }
        if (url.indexOf('content/blog') !== -1) {
            section = 'blog';
        }
        if (url.indexOf('/buyers-guide') !== -1) {
            section = 'buyers-guide';
        }
        if (url.indexOf('content/classified') !== -1) {
            section = 'classified';
        }
        if (url.indexOf('content/event') !== -1) {
            section = 'event';
        }
        if (url.indexOf('content/feature') !== -1) {
            section = 'feature';
        }
        if (url.indexOf('content/forum') !== -1) {
            section = 'forum';
        }
        if (url.indexOf('content/member-discount') !== -1) {
            section = 'member-discount';
        }
        if (url.indexOf('content/member-news') !== -1) {
            section = 'member-news';
        }
        if (url.indexOf('content/buyers-guide') !== -1) {
            section = 'buyers-guide';
        }
        if (url.indexOf('contentmember-offer') !== -1) {
            section = 'member-offer';
        }
        if (url.indexOf('content/news') !== -1) {
            section = 'news';
        }
        if (url.indexOf('content/review') !== -1) {
            section = 'review';
        }
        if (url.indexOf('content/tech-news') !== -1) {
            section = 'tech-news';
        }
        if (url.indexOf('content/video') !== -1) {
            section = 'video';
        }
    }

    window.googletag = window.googletag || {
        cmd: []
    };
    googletag.cmd.push(function() {
        googletag.pubads().setTargeting("section", section);
        googletag.pubads().setTargeting("nid", nid);
        googletag.pubads().setTargeting("tags", tags);
    });
  </script>
