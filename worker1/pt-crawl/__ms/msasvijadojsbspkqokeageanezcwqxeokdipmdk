    (function ($) {
        Drupal.behaviors.ctags = {
            attach: function(context, settings) {
                $('.tag ul').children('li').each(function(i, n) {
                    mytag = ($(this).html());
                    //mytag = mytag.replace('<a','<a class="mst-viewd" ');
                    mytext = ' ' + ($(this).text()) + ' ';
                    $('.field-item').children('p').html(function(k, v) { if (k < 1) return v.replace(mytext, ' ' + mytag + ' ');});
                });
            }
        };
    })(jQuery);
</script>
