function changeimg()
{
	if ($("#searchq").hasClass("navbaronelink6") == true)
	{
			$("#searchq").removeClass("navbaronelink6").addClass("navbaronelink7");
	}
	else
	{
					$("#searchq").removeClass("navbaronelink7").addClass("navbaronelink6");
	}
	return false;
}
function changeimg1()
{

	  if ($('#searchcross').attr('src') == 'https://web.archive.org/web/20150608222859/http://ste.india.com/micros/header-nav/images/search_white.png'== true) {
                        $('#searchcross').attr('src', 'https://web.archive.org/web/20150608222859/http://ste.india.com/micros/header-nav/images/Cancel_white.png');
                    }
                    
                    else  {
                        $('#searchcross').attr('src', 'https://web.archive.org/web/20150608222859/http://ste.india.com/micros/header-nav/images/search_white.png');
                    }
	return false;
}
function changeimg2()
{

	  if ($('#searchcross2').attr('src') == 'https://web.archive.org/web/20150608222859/http://ste.india.com/micros/header-nav/images/iconnavsrch.png'== true) {
                        $('#searchcross2').attr('src', 'https://web.archive.org/web/20150608222859/http://ste.india.com/micros/header-nav/images/search_cancel.png');
                    }
                    
                    else  {
                        $('#searchcross2').attr('src', 'https://web.archive.org/web/20150608222859/http://ste.india.com/micros/header-nav/images/iconnavsrch.png');
                    }
	return false;
}
