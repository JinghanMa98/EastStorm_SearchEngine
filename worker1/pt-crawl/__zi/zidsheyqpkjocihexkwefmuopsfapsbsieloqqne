            const CAPPING_DELAY = 60 * 60 * 1000;
            const ts = localStorage.getItem(CAPPING_KEY);
            const isCapped = ts && (Date.now() - parseInt(ts, 10) < CAPPING_DELAY);

            if (!isCapped) {
