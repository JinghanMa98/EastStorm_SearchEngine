MediaQuery: '(min-width: 769px)', Width: 738, Height: 415, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.GalleryIndex', MediaQuery: '(min-width: 769px)', Width: 322, Height: 181, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.GalleryPage', MediaQuery: '(min-width: 769px)', Width: 768, Height: 432, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.SponsorLogo1', MediaQuery: '(min-width: 769px)', Width: 148, Height: 148, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.SponsorLogo2', MediaQuery: '(min-width: 769px)', Width: 126, Height: 126, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.SponsorLogo3', MediaQuery: '(min-width: 769px)', Width: 104, Height: 104, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.UserManualPage', MediaQuery: '(min-width: 769px)', Width: 580, Height: 400, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.RelatedContent', MediaQuery: '(min-width: 769px)', Width: 505, Height: 284, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.UserPhotoBlockBig', MediaQuery: '(min-width: 769px)', Width: 288, Height: 336, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.UserPhotoBlockSmall', MediaQuery: '(min-width: 769px)', Width: 120, Height: 140, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.UserPhoto', MediaQuery: '(min-width: 769px)', Width: 323, Height: 425, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.IntroductionModuleMedia', MediaQuery: '(min-width: 769px)', Width: 1034, Height: 581, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.TeamBaseCampSearchResult', MediaQuery: '(min-width: 769px)', Width: 738, Height: 415, Transformation: 'ScaleDownToFit' },{Name: 'TabletSize.TeamBaseCampTraingSitePlan', MediaQuery: '(min-width: 769px)', Width: 1034, Height: 581, Transformation: 'ScaleDownToFit' }];
        var tabletMediaQuery = '(min-width: 769px)';

        var BreakPointsViewModel = function(data) {
            var self = this;

            self.Name = data.Name;
            self.MediaQuery = data.MediaQuery;
            self.Width = data.Width;
            self.Height = data.Height;
            self.Transformation = data.Transformation;

            self.getURL = function(baseUrl, newWidth, newHeigth) {
                return baseUrl + (baseUrl.indexOf("?") === -1 ? "?" : "&") + "t=" + data.Transformation + ":" + (newWidth ? newWidth : self.Width) + "x" + (newHeigth ? newHeigth : self.Height);
            };
        };

        var getImageParams = function(sizeName) {
            var imageParams;
            $.each(imageSizesDictionary, function(key, value) {
                if (value.Name === sizeName) {
                    imageParams = value;
                }
            });

            return imageParams;
        };

        this.RegisterKoBinding = function() {
            ko.components.register('responsive-image', {
                viewModel: function (params) {
                    var self = this;
                    //for some reason when using component binding baseUrl is passed as a string and when using custom tag then baseUrl is passed as an observable, 
                    this.baseUrl = (typeof params.baseUrl == 'function') ? params.baseUrl() : params.baseUrl;
                    this.alt = params.alt;
                    this.breakPointOptions = params.breakPointOptions;
                    this.desktopSize = params.desktopSize;
                    this.mobileSize = params.mobileSize;
                    this.tabletSize = params.tabletSize;
                    this.cssClass = params.cssClass;

                    this.images = ko.computed(function () {
                        var images = [];

                        if (self.breakPointOptions) {
                            $.each(self.breakPointOptions,
                                function(key, item) {
                                    images.push(new BreakPointsViewModel(item));
                                });

                            return images.reverse();
                        }

                        if (self.mobileSize) {
                            var mobileImageInfo = getImageParams(self.mobileSize);
                            images.push(new BreakPointsViewModel(mobileImageInfo));

                            if (self.tabletSize) {
                                var tabletImageInfo = getImageParams(self.tabletSize);
                                images.push(new BreakPointsViewModel(tabletImageInfo));
                            } else {
                                var fallbackTabletImageInfo = getImageParams(self.mobileSize);
                                fallbackTabletImageInfo.MediaQuery = tabletMediaQuery;
                                images.push(new BreakPointsViewModel(fallbackTabletImageInfo));
                            }
                        }

                        if (self.desktopSize) {
                            var desktopImageInfo = getImageParams(self.desktopSize);
                            images.push(new BreakPointsViewModel(desktopImageInfo));
                        }

                        return images.reverse();
                    });

                    this.defaultImageUrl = ko.computed(function() {
                        if (!self.images() || self.images().length === 0) {
                            return self.baseUrl;
                        }

                        var sorted = self.images().slice(0)
                            .sort(function(a, b) {
                                return (b.Width * b.Height) - (a.Width * a.Height);
                            });

                        return sorted[0].getURL(self.baseUrl);
                    });
                },
                template:
                    '<picture>' +
                        '<!-- ko foreach: images -->' +
                            '<source data-bind="attr: { srcset: getURL($parent.baseUrl), media: MediaQuery }"/>' +
                        '<!-- /ko -->' +
                        '<img data-bind="attr: {srcset: defaultImageUrl, src: defaultImageUrl, alt: alt}, css: cssClass" />' +
                    '</picture>'
            });
        };
    };
    $(function () {
        var responsiveImage = new fifa.responsiveImage();
        responsiveImage.RegisterKoBinding();
    });
</script>


