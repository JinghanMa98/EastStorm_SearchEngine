<div class="main-container container">
  <div class="row">
      <div class="col-sm-12">
      
        <section>
                        <div class="banner_alert">
               <div class="view view-banner-by-property view-id-banner_by_property view-display-id-block view-dom-id-33bd8850fb1c009c9e335696ecc911b8">
        
  
  
  
  
  
  
  
  
