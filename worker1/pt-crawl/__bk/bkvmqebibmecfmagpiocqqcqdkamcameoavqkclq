<script>
    (() => {
        const body     = document.body;
        const navMain  = document.querySelector('.nav-main');
        const btnOpen  = document.querySelector('.menu-toggle');
        const btnClose = document.querySelector('.menu-close');
        const backdrop = document.querySelector('.nav-backdrop');

        if (btnOpen) btnOpen.addEventListener('click', () => { closeMobileSearch(); body.classList.add('nav-open'); });
        if (btnClose) btnClose.addEventListener('click', () => body.classList.remove('nav-open'));
        if (backdrop) backdrop.addEventListener('click', () => body.classList.remove('nav-open'));

        if (navMain) {
            navMain.addEventListener('click', (e) => {
                const toggle = e.target.closest('.nav-toggle-sub');
                if (!toggle) return;

                e.preventDefault();
                const item = toggle.closest('.nav-item.has-sub');
                if (!item || !item.parentElement) return;

                const parentList = item.parentElement;
                const isOpen = item.classList.contains('open');

                parentList.querySelectorAll('.nav-item.has-sub.open').forEach(other => {
                    if (other !== item) other.classList.remove('open');
                });

                item.classList.toggle('open', !isOpen);
            });

            navMain.addEventListener('mouseleave', () => {
                if (window.innerWidth >= 1025) {
                    navMain.querySelectorAll('.nav-item.has-sub.open')
                        .forEach(item => item.classList.remove('open'));
                }
            });
        }

        document.addEventListener('click', (e) => {
            if (window.innerWidth >= 1025 && navMain && !navMain.contains(e.target)) {
                navMain.querySelectorAll('.nav-item.has-sub.open')
                    .forEach(item => item.classList.remove('open'));
            }
        });

        // SEARCH
        const cache = new Map();
        let abortController = null;

        function debounce(func, wait) {
            let timeout;
            return function(...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(this, args), wait);
            };
        }

        async function fetchSuggestions(query) {
            if (cache.has(query)) return cache.get(query);
            if (abortController) abortController.abort();

            abortController = new AbortController();
            try {
                const response = await fetch(
                    `/api/search/autocomplete.php?q=${encodeURIComponent(query)}&limit=4`,
                    { signal: abortController.signal }
                );

                if (!response.ok) {
                    console.warn('API error:', response.status);
                    return [];
                }

                const results = await response.json();

                if (cache.size > 50) {
                    const firstKey = cache.keys().next().value;
                    cache.delete(firstKey);
                }
                cache.set(query, results);
                return results;
            } catch (error) {
                if (error.name === 'AbortError') return [];
                console.error('Fetch error:', error);
                return [];
            }
        }

        function setupSearch(container) {
            const input = container.querySelector('.custom-search-input');
            const searchIcon = container.querySelector('.search-icon');
            const clearIcon = container.querySelector('.clear-icon');
            if (!input || !searchIcon || !clearIcon) return;

            const suggestionsEl = document.createElement('div');
            suggestionsEl.className = 'search-suggestions';
            container.appendChild(suggestionsEl);

            function updateIcons() {
                const hasValue = input.value.trim().length > 0;
                const isFocused = document.activeElement === input;
                searchIcon.style.display = (hasValue || isFocused) ? 'none' : 'flex';
                clearIcon.style.display = hasValue ? 'flex' : 'none';
            }

            function hideSuggestions() {
                suggestionsEl.classList.remove('show');
                suggestionsEl.innerHTML = '';
            }

            function escapeRegExp(str) {
                return str.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
            }

            function showSuggestions(list, query) {
                if (!list.length) {
                    hideSuggestions();
                    return;
                }

                const q = escapeRegExp(query);
                const reg = new RegExp(`(${q})`, 'gi');

                suggestionsEl.innerHTML = list.map((item, i) => `
                    <div class="search-suggestion-item" data-index="${i}">
                      <div class="search-suggestion-icon"></div>
                      <div class="search-suggestion-text">
                        ${item.replace(reg, '$1')}
                      </div>
                      <div class="search-suggestion-arrow"></div>
                    </div>
                `).join('');

                suggestionsEl.querySelectorAll('.search-suggestion-item').forEach(el => {
                    el.addEventListener('click', () => {
                        const value = list[el.dataset.index];
                        input.value = value;
                        updateIcons();
                        hideSuggestions();
                        runSearch(value);
                    });
                });

                suggestionsEl.classList.add('show');
            }

            const debouncedFetch = debounce(async (query) => {
                if (input.value.trim().toLowerCase() !== query) return;
                const suggestions = await fetchSuggestions(query);
                if (input.value.trim().toLowerCase() !== query) return;
                showSuggestions(suggestions, query);
            }, 50);

            input.addEventListener('input', (e) => {
                const q = e.target.value.trim().toLowerCase();
                updateIcons();

                if (!q || q.length < 1) {
                    hideSuggestions();
                    if (abortController) abortController.abort();
                    return;
                }

                debouncedFetch(q);
            });

            input.addEventListener('focus', updateIcons);
            input.addEventListener('blur', updateIcons);

            input.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const q = input.value.trim();
                    if (q) {
                        hideSuggestions();
                        runSearch(q);
                    }
                }
            });

            searchIcon.addEventListener('click', () => {
                const q = input.value.trim();
                if (q) {
                    hideSuggestions();
                    runSearch(q);
                }
            });

            clearIcon.addEventListener('click', () => {
                input.value = '';
                updateIcons();
                hideSuggestions();
                input.focus();
            });

            document.addEventListener('click', (e) => {
                if (!container.contains(e.target)) hideSuggestions();
            });

            updateIcons();
        }

        function runSearch(query) {
            const wrapper = document.querySelector('.hidden-google-search');
            if (!wrapper) return;

            const hiddenInput = wrapper.querySelector('input.gsc-input');
            if (!hiddenInput) return;

            hiddenInput.value = query;

            const searchBtn = wrapper.querySelector('button.gsc-search-button-v2, button.gsc-search-button');
            if (searchBtn) {
                hiddenInput.dispatchEvent(new Event('input', { bubbles: true }));
                searchBtn.click();
            } else {
                const form = hiddenInput.closest('form');
                if (form) form.submit();
            }
        }

        document.querySelectorAll('.custom-search-container').forEach(setupSearch);

        function populateSearchFromURL() {
            const q = new URLSearchParams(window.location.search).get('q');
            if (!q) return;
            document.querySelectorAll('.custom-search-input').forEach(input => {
                input.value = q;
                input.dispatchEvent(new Event('input', { bubbles: true }));
            });
        }

        populateSearchFromURL();

        // SEARCH MOBILE
        const mobileSearchOverlay  = document.querySelector('.mobile-search-overlay');
        const mobileSearchToggle   = document.querySelector('.menu-search');
        const mobileSearchBackdrop = mobileSearchOverlay
            ? mobileSearchOverlay.querySelector('.mobile-search-backdrop')
            : null;

        function openMobileSearch() {
            if (!mobileSearchOverlay) return;
            body.classList.add('mobile-search-open');
            mobileSearchOverlay.setAttribute('aria-hidden', 'false');

            const input = mobileSearchOverlay.querySelector('.custom-search-input');
            if (input) {
                input.focus();
                input.select();
            }
        }

        function closeMobileSearch() {
            if (!mobileSearchOverlay) return;
            body.classList.remove('mobile-search-open');
            mobileSearchOverlay.setAttribute('aria-hidden', 'true');
        }

        if (mobileSearchToggle && mobileSearchOverlay) {
            mobileSearchToggle.addEventListener('click', () => {
                if (body.classList.contains('mobile-search-open')) {
                    closeMobileSearch();
                } else {
                    body.classList.remove('nav-open');
                    openMobileSearch();
                }
            });
        }

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && body.classList.contains('mobile-search-open')) {
                closeMobileSearch();
            }
        });
    })();
</script>

