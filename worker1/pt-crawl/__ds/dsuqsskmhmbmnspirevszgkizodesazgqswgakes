<script type="text/javascript">
var spotlight_key = '';
var spotlight_tmps = 0;function spotlightLog(cid, ads) {
	var dqs;
	for(var i=0;i<ads.length;i++) {
		var qs = ads[i][0]+','+cid+','+ads[i][1]+','+spotlight_key;
		dqs+=ads[i][0]+':'+ads[i][1]+',';
		var shh = document.getElementById('spotlight_href_header_'+ads[i][0]+'_'+cid);
		if(shh)
			shh.href = 'https://web.archive.org/web/20100611012631/http://spotlight.adsupermarket.com/logc.php?_='+qs;
		var shs = document.getElementById('spotlight_href_sub_'+ads[i][0]+'_'+cid);
		if(shs)
			shs.href = 'https://web.archive.org/web/20100611012631/http://spotlight.adsupermarket.com/logc.php?_='+qs;
	}
	dqs+=cid+','+spotlight_key;
	var e = document.createElement('script');
	e.type = 'text/javascript';
	e.src = 'https://web.archive.org/web/20100611012631/http://spotlight.adsupermarket.com/logd.php?_='+dqs;
	spotlight_tmps++;
	var tmp = spotlight_tmps;
	e.id = 'spotlight_tmp_'+tmp;
	e.onload = function() {
		spotlightUnlog(tmp);
	};
	document.getElementsByTagName('head')[0].appendChild(e);
}function spotlightUnlog(n) {
	var e = document.getElementById('spotlight_tmp_'+n);
	if(e)
		e.parentNode.removeChild(e);
}function spotlightReadCookie() {
	var find_name = 'spotlight_key';
	if(document.cookie.length>0) {
		var c = document.cookie.split(';');
		var d;
		var i;
		for(i=0;i<c.length;i++) {
			d = c[i].split('=');
			if(d[0].replace(/^\s+|\s+$/g, '')==find_name)
				return unescape(d[1].replace(/^\s+|\s+$/g, ''));
		}
	}
	return '';
}function spotlightCreateCookie(value, expire_days) {
	var date = new Date();
	date.setDate(date.getDate()+expire_days);
	var domain = '.independent.co.uk';
	var c = 'spotlight_key='+escape(value);
	c+=(expire_days==null?'':'; expires='+date.toGMTString())+';';
	c+=(domain?' domain='+domain+';':'')+' path=/';
	document.cookie = c;
}function spotlightLoad() {
	spotlight_key = spotlightReadCookie();
	if(spotlight_key=='' || spotlight_key==0)
		spotlight_key = Math.random();
	spotlightCreateCookie(spotlight_key, 365);
}spotlightLoad();
</script>
